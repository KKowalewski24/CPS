<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.jkkk.cps.view.controller.MainPanel">
    <children>
        <ToolBar layoutX="366.0" layoutY="14.0" prefHeight="61.0" prefWidth="468.0">
            <items>
                <Button minHeight="35.0" minWidth="100.0" mnemonicParsing="false"
                        onAction="#onActionButtonGenerateData" prefHeight="35.0" prefWidth="112.0"
                        text="Generuj Wykres"/>
                <Button layoutX="10.0" layoutY="10.0" minHeight="35.0" minWidth="100.0"
                        mnemonicParsing="false" onAction="#onActionButtonAddNewTab"
                        text="Dodaj Kartę"/>
                <Button minHeight="35.0" minWidth="100.0" mnemonicParsing="false"
                        onAction="#onActionButtonReloadStage" text="Odśwież Stronę"/>
                <Button layoutX="106.0" layoutY="10.0" minHeight="35.0" minWidth="100.0"
                        mnemonicParsing="false" onAction="#onActionButtonCloseProgram"
                        text="Zamknij Program"/>
            </items>
        </ToolBar>

        <TabPane fx:id="tabPaneInputs" layoutX="22.0" layoutY="84.0" prefHeight="568.0"
                 prefWidth="440.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Generowanie">
                    <AnchorPane prefHeight="553.0" prefWidth="440.0">
                        <Label layoutX="150.0" layoutY="21.0" prefHeight="28.0" prefWidth="141.0"
                               text="Wybierz Rodzaj Sygnału"/>

                        <ComboBox fx:id="comboBoxSignalTypes" layoutX="19.0" layoutY="56.0"
                                  prefHeight="29.0" prefWidth="402.0"/>
                        <Pane layoutX="19.0" layoutY="134.0" prefHeight="392.0" prefWidth="402.0">
                            <children>
                                <Label layoutX="148.0" layoutY="15.0" prefHeight="28.0"
                                       prefWidth="117.0" text="Wybierz Parametry"/>

                                <Label layoutX="14.0" layoutY="60.0" prefHeight="28.0"
                                       prefWidth="120.0" text="Amplituda"/>
                                <TextField fx:id="textFieldAmplitude" layoutX="226.0"
                                           layoutY="60.0"/>

                                <Label layoutX="14.0" layoutY="100.0" prefHeight="28.0"
                                       prefWidth="120.0" text="Czas początkowy"/>
                                <TextField fx:id="textFieldStartTime" layoutX="226.0"
                                           layoutY="100.0"/>

                                <Label layoutX="14.0" layoutY="140.0" prefHeight="28.0"
                                       prefWidth="120.0" text="Czas trwania sygnału"/>
                                <TextField fx:id="textFieldSignalDuration" layoutX="226.0"
                                           layoutY="140.0"/>

                                <Label layoutX="14.0" layoutY="180.0" prefHeight="28.0"
                                       prefWidth="120.0" text="Okres podstawowy"/>
                                <TextField fx:id="textFieldBasicPeriod" layoutX="226.0"
                                           layoutY="180.0"/>

                                <Label layoutX="14.0" layoutY="220.0" prefHeight="28.0"
                                       prefWidth="120.0" text="Wspł wypełnienia"/>
                                <TextField fx:id="textFieldFillFactor" layoutX="226.0"
                                           layoutY="220.0"/>

                                <Label layoutX="14.0" layoutY="260.0" prefHeight="28.0"
                                       prefWidth="120.0" text="Czas skoku"/>
                                <TextField fx:id="textFieldJumpTime" layoutX="226.0"
                                           layoutY="260.0"/>

                                <Label layoutX="14.0" layoutY="300.0" prefHeight="28.0"
                                       prefWidth="129.0" text="Prawdopodobieństwo"/>
                                <TextField fx:id="textFieldProbability" layoutX="226.0"
                                           layoutY="300.0"/>

                                <Label layoutX="14.0" layoutY="340.0" prefHeight="28.0"
                                       prefWidth="120.0" text="Częst próbkowania"/>
                                <TextField fx:id="textFieldSamplingFrequency" layoutX="226.0"
                                           layoutY="340.0"/>
                            </children>
                        </Pane>
                    </AnchorPane>
                </Tab>

                <Tab text="Operacje">
                    <AnchorPane>
                        <Label layoutX="166.0" layoutY="22.0" prefHeight="28.0" prefWidth="108.0"
                               text="Wybierz Operacje"/>

                        <ComboBox fx:id="comboBoxOperationTypes" layoutX="19.0" layoutY="56.0"
                                  prefHeight="29.0" prefWidth="402.0"/>
                    </AnchorPane>
                </Tab>

                <Tab text="Obsługa Plików">
                    <AnchorPane>
                        <children>
                            <Button layoutX="120.0" layoutY="36.0" mnemonicParsing="false"
                                    onAction="#onActionLoadChart" prefHeight="50.0"
                                    prefWidth="200.0" text="Wczytaj Wykres"/>
                            <Button layoutX="120.0" layoutY="111.0" mnemonicParsing="false"
                                    onAction="#onActionSaveChart" prefHeight="50.0"
                                    prefWidth="200.0" text="Zapisz Wykres"/>
                        </children>
                    </AnchorPane>
                </Tab>
            </tabs>
        </TabPane>

        <TabPane fx:id="tabPaneResults" layoutX="498.0" layoutY="84.0" minHeight="552.0"
                 minWidth="666.0" prefHeight="568.0" prefWidth="672.0"
                 tabClosingPolicy="UNAVAILABLE">

        </TabPane>

        <!-- #################################################################################### -->
        <!-- IN ORDER TO USE SCENE BUILDER IN NORMAL WAY - COMMENT OUT THIS PANE -->
        <Pane fx:id="paramsTab" prefHeight="392.0" prefWidth="402.0">
            <children>
                <Label layoutX="50.0" layoutY="40.0" prefHeight="28.0" prefWidth="240.0"
                       text="Wartość średnia sygnału"/>
                <TextField fx:id="textFieldSignalAverageValue" editable="false"
                           layoutX="350.0" layoutY="40.0"/>

                <Label layoutX="50.0" layoutY="80.0" prefHeight="28.0" prefWidth="240.0"
                       text="Wartość średnia bezwzględna sygnału"/>
                <TextField fx:id="textFieldAbsoluteSignalAverageValue" editable="false"
                           layoutX="350.0" layoutY="80.0"/>

                <Label layoutX="50.0" layoutY="120.0" prefHeight="28.0" prefWidth="240.0"
                       text="Wartość skuteczna sygnału"/>
                <TextField fx:id="textFieldSignalEffectiveValue" editable="false"
                           layoutX="350.0" layoutY="120.0"/>

                <Label layoutX="50.0" layoutY="160.0" prefHeight="28.0" prefWidth="240.0"
                       text="Wariancja sygnału"/>
                <TextField fx:id="textFieldSignalVariance" editable="false"
                           layoutX="350.0" layoutY="160.0"/>

                <Label layoutX="50.0" layoutY="200.0" prefHeight="28.0" prefWidth="240.0"
                       text="Moc średnia sygnału"/>
                <TextField fx:id="textFieldAverageSignalStrength" editable="false"
                           layoutX="350.0" layoutY="200.0"/>

                <Label layoutX="50.0" layoutY="240.0" prefHeight="28.0" prefWidth="240.0"
                       text="Błąd średniokwadratowy"/>
                <TextField fx:id="textFieldMediumSquareError" editable="false"
                           layoutX="350.0" layoutY="240.0"/>

                <Label layoutX="50.0" layoutY="280.0" prefHeight="28.0" prefWidth="240.0"
                       text="Stosunek sygnał - szum"/>
                <TextField fx:id="textFieldSignalNoiseRatio" editable="false"
                           layoutX="350.0" layoutY="280.0"/>

                <Label layoutX="50.0" layoutY="320.0" prefHeight="28.0" prefWidth="240.0"
                       text="Szczytowy stosunek sygnał - szum"/>
                <TextField fx:id="textFieldPeakSignalNoiseRatio" editable="false"
                           layoutX="350.0" layoutY="320.0"/>

                <Label layoutX="50.0" layoutY="360.0" prefHeight="28.0" prefWidth="240.0"
                       text="Maksymalna różnica"/>
                <TextField fx:id="textFieldMaximumDifference" editable="false"
                           layoutX="350.0" layoutY="360.0"/>

                <Label layoutX="50.0" layoutY="400.0" prefHeight="28.0" prefWidth="240.0"
                       text="Efektywna liczba bitów"/>
                <TextField fx:id="textFieldEffectiveNumberOfBits" editable="false"
                           layoutX="350.0" layoutY="400.0"/>

                <Label layoutX="50.0" layoutY="440.0" prefHeight="28.0" prefWidth="240.0"
                       text="Czas transformacji"/>
                <TextField fx:id="textFieldTransformationTime" editable="false"
                           layoutX="350.0" layoutY="440.0"/>
            </children>
        </Pane>
        <!-- #################################################################################### -->

    </children>

</AnchorPane>
