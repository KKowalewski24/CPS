<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="700.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.jkkk.cps.view.controller.animationpanel.AnimationPanel">
    <children>
        <ToolBar layoutX="24.0" layoutY="14.0" prefHeight="41.0" prefWidth="320.0">
            <items>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button layoutX="24.0" layoutY="14.0" mnemonicParsing="false"
                        onAction="#onActionButtonReturn" prefHeight="29.0" prefWidth="72.0"
                        text="Powrót"/>
                <Button layoutX="24.0" layoutY="14.0" mnemonicParsing="false"
                        onAction="#onActionButtonChangeTheme" prefHeight="29.0" prefWidth="109.0"
                        text="Motyw ON/OFF"/>
                <Button layoutX="24.0" layoutY="14.0" mnemonicParsing="false"
                        onAction="#onActionButtonReloadStage" prefHeight="29.0" prefWidth="109.0"
                        text="Odśwież Stronę"/>
                <Pane HBox.hgrow="ALWAYS"/>
            </items>
        </ToolBar>

        <TitledPane animated="false" collapsible="false" layoutX="24.0" layoutY="72.0"
                    prefHeight="550.0" prefWidth="320.0" text="Parametry">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="550.0" prefWidth="320.0">
                    <children>
                        <ToolBar layoutX="0.0" layoutY="479.0" prefHeight="40.0" prefWidth="318.0">
                            <items>
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button mnemonicParsing="false"
                                        onAction="#onActionButtonStartAnimation" prefHeight="29.0"
                                        prefWidth="141.0" text="Rozpocznij Animacje"/>
                                <Button mnemonicParsing="false"
                                        onAction="#onActionButtonStopAnimation" prefHeight="29.0"
                                        prefWidth="141.0" text="Zatrzymaj Animacje"/>
                                <Pane HBox.hgrow="ALWAYS"/>
                            </items>
                        </ToolBar>
                        <AnchorPane layoutX="0.0" layoutY="14.0" prefHeight="40.0"
                                    prefWidth="320.0">
                            <children>
                                <Label layoutX="14.0" layoutY="11.0" text="Label"/>
                                <TextField layoutX="144.0" layoutY="6.0"/>
                            </children>
                        </AnchorPane>
                    </children>
                </AnchorPane>
            </content>
        </TitledPane>
        <TitledPane animated="false" collapsible="false" layoutX="369.0" layoutY="14.0"
                    prefHeight="632.0" prefWidth="906.0" text="Wykresy">
            <content>
                <VBox layoutX="391.0" layoutY="19.0" prefHeight="630.0" prefWidth="882.0">
                    <children>
                        <LineChart fx:id="chartSignalX" animated="false" prefHeight="405.0"
                                   prefWidth="625.0" title="Sygnał Okresowy X">
                            <xAxis>
                                <CategoryAxis side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis side="LEFT"/>
                            </yAxis>
                        </LineChart>
                        <LineChart fx:id="chartSignalY" animated="false" title="Sygnał Okresowy Y">
                            <xAxis>
                                <CategoryAxis side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis side="LEFT"/>
                            </yAxis>
                        </LineChart>
                        <LineChart fx:id="chartCorrelation" animated="false"
                                   title="Korelacja Sygnałów X oraz Y">
                            <xAxis>
                                <CategoryAxis side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis side="LEFT"/>
                            </yAxis>
                        </LineChart>
                    </children>
                </VBox>
            </content>
        </TitledPane>
    </children>
</AnchorPane>
